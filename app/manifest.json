{
  "manifest_version": 2,

  "name": "Prebid config creator",
  "description": "This extension helps you easily create a prebid config for all DFP placements that are on your website",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/content-script.js"]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*"
  ]
}