{
  "manifest_version": 2,
  "name": "Prebid config creator",
  "description": "This extension helps you easily create a prebid config for all DFP placements that are on your website",
  "version": "1.0.4",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png" 
  },
  "web_accessible_resources": [
    "scripts/inject.js"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/content-script.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*"
  ]
}